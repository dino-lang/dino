#
# Usage: bits.tst [start_test_number]
#
# The script outputs self-explanatory messages and returns zero exit code if 
# it is all ok.
#

script_file=$0
CC='@CC@'
CC_options='@CFLAGS@ @DEFS@ -I. -I@srcdir@/'
source_addfiles='@srcdir@/bits.c'
addfiles='bits.o'
test_file=tbits.c
outfile=./a.out

if test x$1 = x
then
    start_test_number=1
else
    if expr $1 + 0 >/dev/null
    then
        start_test_number=`expr $1 + 0`
    else
        echo $script_file:invalid argument $1 2>&1
        exit 1
    fi
fi

# Compilation of addfiles

echo '      ' $CC $CC_options -c $source_addfiles
if $CC $CC_options -c $source_addfiles; then
        result=ok
else
        echo '***' $script_file: test is failed see file $test_file
        exit 1
fi

# Test 1.
if test $result = ok -a $start_test_number -le 1; then
        cat >$test_file <<'TEST1'
#include <stdlib.h>
#include "bits.h"
static char str [] = {0,0,0,0, 0,0,0,0};
main ()
{
  int i, j;
  
  for (i = 0; i < sizeof (str) * CHAR_BIT; i++)
    if (BIT (str, i))
      exit (1);
  for (i = 0; i < sizeof (str) * CHAR_BIT; i++)
    {
      SET_BIT (str, i, 1);
      for (j = 0; j < sizeof (str) * CHAR_BIT; j++)
        if (j <= i)
          {
            if (BIT (str, j) == 0)
              exit (1);
          }
        else if (BIT (str, j))
          exit (1);
    }
  exit (0);
}
TEST1

        echo test 1:
        echo '      ' $CC $CC_options $test_file $addfiles -o $outfile
        if $CC $CC_options $test_file $addfiles -o $outfile; then
                echo '      ' $outfile
                if $outfile; then
                        result=ok
                else
                        result=fail
                fi
        else
                result=fail
        fi
fi

# Test 2.
if test $result = ok -a $start_test_number -le 2; then
        cat >$test_file <<'TEST2'
#include <stdlib.h>
#include "bits.h"
static char str [] = {0,0,0,0, 0,0,0,0};
main ()
{
  int i;
  
  for (i = 0; i < sizeof (str) * CHAR_BIT; i++)
    if (!is_zero_bit_string (str, i, (sizeof (str) * CHAR_BIT - i) / 2 + 1))
      exit (1);
  bit_string_set (str, 13, 1, 35);
  for (i = 0; i < 13; i++)
    if (!is_zero_bit_string (str, i, 13 - i))
      exit (1);
  for (i = 13; i < 48; i++)
    if (is_zero_bit_string (str, i, 48 - i))
      exit (1);
  for (i = 48; i < sizeof (str) * CHAR_BIT; i++)
    if (!is_zero_bit_string (str, i, sizeof (str) * CHAR_BIT - i))
      exit (1);
  exit (0);
}
TEST2

        echo test 2:
        echo '      ' $CC $CC_options $test_file $addfiles -o $outfile
        if $CC $CC_options $test_file $addfiles -o $outfile; then
                echo '      ' $outfile
                if $outfile; then
                        result=ok
                else
                        result=fail
                fi
        else
                result=fail
        fi
fi

# Test 3.
if test $result = ok -a $start_test_number -le 3; then
        cat >$test_file <<'TEST3'
#include <stdlib.h>
#include "bits.h"
static char str [] = {0,0,0,0, 0,0,0,0};
main ()
{
  int i;
  
  for (i = 0; i + i/2 + 1 < sizeof (str) * CHAR_BIT; i++)
    {
      bit_string_set (str, i, 1, i/2 + 1);
      if (!is_zero_bit_string (str, 0, i - 1))
        exit (1);
      if (is_zero_bit_string (str, i, i/2 + 1))
        exit (1);
      if (!is_zero_bit_string (str, i + i/2 + 1,
                               sizeof (str) * CHAR_BIT - (i + i/2 + 1)))
        exit (1);
      bit_string_set (str, 0, 0, sizeof (str) * CHAR_BIT);
    }
  exit (0);
}
TEST3

        echo test 3:
        echo '      ' $CC $CC_options $test_file $addfiles -o $outfile
        if $CC $CC_options $test_file $addfiles -o $outfile; then
                echo '      ' $outfile
                if $outfile; then
                        result=ok
                else
                        result=fail
                fi
        else
                result=fail
        fi
fi

# Test 4.
if test $result = ok -a $start_test_number -le 4; then
        cat >$test_file <<'TEST4'
#include <stdlib.h>
#include "bits.h"
static char str [] = {0,0,0,0, 0,0,0,0};
static char str1 [] = {0,0,0,0, 0,0,0,0};
main ()
{
  int i;
  
  bit_string_set (str, 2, 1, 43);
  bit_string_set (str1, 2, 1, 40);
  for (i = 0; i < 42; i++)
    if (bit_string_comparison (str, i, str1, i, 42 - i) != 0)
      exit (1);
  for (i = 0; i < 43; i++)
    if (bit_string_comparison (str, i, str1, i, sizeof (str) * CHAR_BIT - i)
        <= 0)
      exit (1);
  for (i = 0; i < 43; i++)
    if (bit_string_comparison (str1, i, str, i, sizeof (str) * CHAR_BIT - i)
        >= 0)
      exit (1);
  exit (0);
}
TEST4

        echo test 4:
        echo '      ' $CC $CC_options $test_file $addfiles -o $outfile
        if $CC $CC_options $test_file $addfiles -o $outfile; then
                echo '      ' $outfile
                if $outfile; then
                        result=ok
                else
                        result=fail
                fi
        else
                result=fail
        fi
fi

# Test 5.
if test $result = ok -a $start_test_number -le 5; then
        cat >$test_file <<'TEST5'
#include <stdlib.h>
#include "bits.h"
static char str [] = {0,0,0,0, 0,0,0,0};
static char str1 [] = {0,0,0,0, 0,0,0,0};
main ()
{
  int i;
  
  bit_string_set (str, 2, 1, 43);
  for (i = 0; i + 5 < sizeof (str) * CHAR_BIT; i++)
    {
      bit_string_copy (str1, i + 5, str, i, sizeof (str) * CHAR_BIT - i - 5);
      if (bit_string_comparison (str1, i + 5, str, i,
                                 sizeof (str) * CHAR_BIT - i - 5) != 0)
        exit (1);
    }  
  exit (0);
}
TEST5

        echo test 5:
        echo '      ' $CC $CC_options $test_file $addfiles -o $outfile
        if $CC $CC_options $test_file $addfiles -o $outfile; then
                echo '      ' $outfile
                if $outfile; then
                        result=ok
                else
                        result=fail
                fi
        else
                result=fail
        fi
fi

# Test 6.
if test $result = ok -a $start_test_number -le 6; then
        cat >$test_file <<'TEST6'
#include <stdlib.h>
#include "bits.h"
static char str [] = {0,0,0,0, 0,0,0,0};
static char str1 [] = {0,0,0,0, 0,0,0,0};
main ()
{
  int i;
  
  bit_string_set (str, 2, 1, 43);
  bit_string_set (str1, 2, 1, 43);
  for (i = 0; i + 5 < sizeof (str) * CHAR_BIT; i++)
    {
      bit_string_set (str, 0, 0, sizeof (str) * CHAR_BIT);
      bit_string_set (str, 2, 1, 43);
      bit_string_move (str, i + 5, str, i, sizeof (str) * CHAR_BIT - i - 5);
      if (bit_string_comparison (str, i + 5, str1, i,
                                 sizeof (str) * CHAR_BIT - i - 5) != 0)
        exit (1);
    }  
  exit (0);
}
TEST6

        echo test 6:
        echo '      ' $CC $CC_options $test_file $addfiles -o $outfile
        if $CC $CC_options $test_file $addfiles -o $outfile; then
                echo '      ' $outfile
                if $outfile; then
                        result=ok
                else
                        result=fail
                fi
        else
                result=fail
        fi
fi

# Test 7.
if test $result = ok -a $start_test_number -le 7; then
        cat >$test_file <<'TEST7'
#include <stdlib.h>
#include "bits.h"
static char str [] = {0,0,0,0, 0,0,0,0};
static char str1 [] = {0,0,0,0, 0,0,0,0};
main ()
{
